modules = ["nodejs-20", "python-3.11"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "routing-dashboard"

[[workflows.workflow]]
name = "Systems"
mode = "sequential"
author = 52806342

[[workflows.workflow.tasks]]
task = "shell.exec"
args = 'g++ main.cpp bootloader/boot.cpp linux_kernel/kernel_main.cpp \ services/recovery.cpp runtime/app_loader.cpp apps/example_app.cpp \ -o os_entry `sdl2-config --cflags --libs`'

[[workflows.workflow]]
name = "routing-dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python dashboard/app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
expertMode = true

[nix]
packages = ["wget"]
channel = "stable-25_05"

[[ports]]
localPort = 5000
externalPort = 80
